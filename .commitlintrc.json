{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "ci",
        "revert"
      ]
    ],
    "type-case": [
      2,
      "always",
      "lower-case"
    ],
    "scope-enum": [
      2,
      "always",
      [
        "service",
        "job",
        "worker",
        "env",
        "healthcheck",
        "docker",
        "github",
        "serialization",
        "validation",
        "docs",
        "tests",
        "ci"
      ]
    ],
    "subject-case": [
      0
    ]
  }
}
